extends ../layout 
block content 
    form.search(action="/products/search" method="GET")
        input.search(type="text", name="search" placeholder="Kerko vetura..." action="/products/"+search)
        button.search(type="submit") Kerko
    if allProducts.length > 0
        .product-wrapper.flex-col
            each e in allProducts 
                .single-prod-card 
                    a(href="/products/"+e._id)     
                        h3.product-name=e.name
                    a(href="/products/"+e._id)
                        img(src="/images/products/"+e.image, alt=e.name) 
                    h4.price Cmimi : #{e.price} â‚¬
                    h4.shitesi Shitesi : #{e.seller}
                    h4.tel Tel : #{e.phone} 
                    h4.location= 'Lokacioni : ' + e.location
                    //- h4= 'Data e postimit : ' + e.createdAt
    else 
        h3.zero-produkte Nuk ka asnje produkt. Behu i pari qe do te shtoj nje produkt!   
            a(href="/products/create") Kliko ketu per te shtuar nje produkt! 
