extends layout 
block content
    h2.produktet-tuaja Të gjitha postimet : 
        span(class="length")= allProducts.length
    if allProducts.length > 0
        .container
            if allProducts.length > 0
                each e in allProducts 
                    .table-responsive
                         table(class="table table-bordered")
                           thead
                             tr
                               th ID
                               th Emri
                               th Data e postimit
                               th Shitësi
                               th Fotografi
                               th Menaxho
                           tbody
                             tr
                               td
                                    a(href="/products/"+e._id )
                                        h5(class="alert alert-danger")= e._id
                               td
                                    a(href="/products/"+e._id )
                                        h5(class="alert alert-info")= e.name
                               td
                                    h5(class="alert alert-success")= e.DATA
                               td
                                    h5(class="alert alert-success")= e.seller
                               td
                                a(href="/products/"+e._id )
                                   img(src="/images/products/"+e.image[0] id="table-img")
                               td 
                                 form(action="/products/deleteAll/"+e._id method="POST")
                                   button(type="submit" class="btn btn-danger" value="Fshi") Fshi
                                   a(href="/products/edit/"+e._id class="btn btn-warning") Ndrysho
